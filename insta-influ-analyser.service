[Unit]
Description=Instagram Influencer Analyzer
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/insta-influ-analyser
Environment="PATH=/opt/insta-influ-analyser/venv/bin"
Environment="FLASK_APP=app"
Environment="FLASK_ENV=production"
Environment="DATABASE_URL=sqlite:///instance/app.db"

ExecStart=/opt/insta-influ-analyser/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 app:app
Restart=always

[Install]
WantedBy=multi-user.target 